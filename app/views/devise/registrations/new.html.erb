<%= render "layouts/header" %>

<div class="container mt-5 pt-5">
  <div class="row justify-content-center align-items-center">
    <div class="col-lg-6 ">
      <div class="form">
        <h4>Sign Up</h4>
        <p>Registrate</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "contactForm"}) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your Email", id: "email", "data-rule": "email", "data-msg": "Please enter a valid email" %>
            <div class="validation"></div>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password", placeholder: "Your Password (Minimum 6 characters)", "data-rule": "minlen:6", "data-msg": "Please enter at least 8 chars" %>
            <div class="validation"></div>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password-confirmation", placeholder: "Your Password (Minimum 6 characters)", "data-rule": "minlen:6", "data-msg": "Please enter at least 8 chars"  %>
            <div class="validation"></div>
          </div>

          <div id="sendmessage">Your register has been sent. Thank you!</div>
          <div id="errormessage"></div>

          <%= render "devise/shared/links" %>

          <div class="text-center mt-3"><button type="submit" title="Send Message" class="btn btn-primary btn-block">Register</button></div>
        <% end %>
      </div>
    </div>
  </div>
</div>


